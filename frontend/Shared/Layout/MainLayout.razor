@inherits LayoutComponentBase
@inject NavigationManager navigationManager
@using MudBlazor

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
            <MudText Typo="Typo.h6">Nordkraft PMS</MudText>
            <AppBarButton OnClickCallBack=@UpdateAppBar Title="Poster Management" Link="/PosterManagement"
                Class="pl-6" />
            <AppBarButton OnClickCallBack=@UpdateAppBar Title="User Management" Link="/UserManagement" />
            <AppBarButton OnClickCallBack=@UpdateAppBar Title="Institution Management" Link="/InstitutionManagement" />
            <AppBarButton OnClickCallBack=@UpdateAppBar Title="Screen Management" Link="/ScreenManagement" />
            <MudSpacer />
            <MudText>User Name (User Role) - Institution</MudText>
            <MudIconButton Icon="fas fa-cogs" Color="Color.Warning"></MudIconButton>
    </MudAppBar>

    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code
{
    private void UpdateAppBar()
    {
        StateHasChanged();
    }
}