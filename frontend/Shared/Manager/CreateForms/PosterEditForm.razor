@using MudBlazor

<MudForm>
    <MudCard>
        <MudCardContent>
            <MudTextField FullWidth="true" @bind-Value="_name" Label="Postername" Placeholder="Postername..."
                Class="mb-3" />
            <MudDatePicker ShowWeekNumbers="true" Label="Start date" @bind-Date="_startDate"
                DateFormat="dd/MM/yyyy" />
            <MudDatePicker ShowWeekNumbers="true" Label="End date" @bind-Date="_endDate" DateFormat="dd/MM/yyyy" />
            <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="mb-3">Apply edit</MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Secondary" Class="mb-3">Cancel</MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Warning">Delete</MudButton>
        </MudCardContent>
    </MudCard>
</MudForm>

@code
{
    private string _name 
    { 
        get; 
        set; 
    }

    private DateTime? _startDate { get; set; }
    private DateTime? _endDate { get; set; }
}