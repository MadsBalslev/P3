@using MudBlazor
@inherits EditForm<Poster>

<MudForm @ref="_form">
    <MudCard>
        <MudCardContent>
            <MudTextField FullWidth="true" @bind-Value="_managerService.SelectedItem.name"
                Label="Postername" Placeholder="Postername..." Class="mb-3" />
            <MudDatePicker ShowWeekNumbers="true" Label="Start date"
                @bind-Date="_managerService.SelectedItem.startDate" DateFormat="dd/MM/yyyy" />
            <MudDatePicker ShowWeekNumbers="true" Label="End date"
                @bind-Date="_managerService.SelectedItem.endDate" DateFormat="dd/MM/yyyy" />
            <MudButton @onclick="OnEditItem" Variant="Variant.Filled" Color="Color.Primary"
                Class="mb-3">Apply edit
            </MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Secondary" Class="mb-3">Cancel
            </MudButton>
            <MudButton @onclick="OnDelete" Variant="Variant.Filled" Color="Color.Warning">Delete</MudButton>
        </MudCardContent>
    </MudCard>
</MudForm>