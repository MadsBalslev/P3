@using MudBlazor
@typeparam T
@inherits MudTable<T>
@using System

<MudContainer>
    <MudGrid Justify="Justify.Center">
        <MudItem>
            <MudTable Items="@ItemList">
                <HeaderContent>
                    @HeaderContent
                </HeaderContent>
                <RowTemplate>
                    @foreach (string rowTemplateProperty in DisplayRowTemplateProperties)
                    {
                        <MudTd>@context?[rowTemplateProperty]</MudTd>
                    }
                </RowTemplate>
            </MudTable>
        </MudItem>

        <MudItem>
            <MudForm>
                @MudForm
            </MudForm>
        </MudItem>
    </MudGrid>
</MudContainer>

