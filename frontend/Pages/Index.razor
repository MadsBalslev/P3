@page "/"
@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<div class="Login">
    <input type="text" id="Usernamebox" placeholder="Enter Username" name="Uname" required>
</div>
<div class="Login">
    <input type="text" id="Passwordbox" placeholder="Enter Password" name="Pword" required>
</div>
<div class="Login">
    <button type="submit" id="Log" @onclick="MoveMeToHome">Login</button>
</div>
<div class="Login">
    <label><input type="checkbox" checked="checked" name="remember"> Remember me</label>
</div>
<div class="Login">
    <span class="psw"><a href="/ForgotPassword">Forgot password?</a></span>
</div>

@code{
    void MoveMeToHome()
    {
        NavigationManager.NavigateTo(uri: "/Home");
    }
}
