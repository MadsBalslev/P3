@page "/ScreenManagement"
@using MudBlazor
@inject ISnackbar Snackbar

<style>
    .selected {
        background-color: #1E88E5 !important;
    }

    .selected>td {
        color: white !important;
    }

    .selected>td .mud-input {
        color: white !important;
    }
</style>

<MudTabs>
        <Manager T="@Poster">
            <MudGrid Justify="Justify.FlexEnd">
                <MudForm>
                    <MudCard>
                        <MudCardContent>
                            <MudTextField @bind-Value="zoneName" Label="Zone name" Placeholder="Zone name..." class="mb-3" />
                            <MudButton Variant="Variant.Filled" Color="Color.Primary" FullWidth="true" class="mb-3">Add Zone</MudButton>
                            <MudButton Variant="Variant.Filled" Color="Color.Secondary" FullWidth="true">Cancel</MudButton>
                        </MudCardContent>
                    </MudCard>
                </MudForm>
            </MudGrid>
        </Manager>
</MudTabs>

@code
{
    private string zoneName;
}