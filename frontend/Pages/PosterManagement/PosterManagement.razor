@page "/PosterManagement"
@using MudBlazor
@inject ISnackbar Snackbar
@using frontend.Shared.Manager

<MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
    <MudTabPanel Text="Posters">
        <Manager T="@Poster" Context="poster">
            <HeaderContent>
                <MudTh>Id</MudTh>
                <MudTd>Name</MudTd>
                <MudTd>Start date</MudTd>
                <MudTd>End date</MudTd>
                <MudTd>Creator</MudTd>
                <MudTd>Institution</MudTd>
                <MudTd>Image url</MudTd>
            </HeaderContent>
            <RowTemplate>
                <MudTd>@poster.posterId</MudTd>
                <MudTd>@poster.name</MudTd>
                <MudTd>@poster.startDate</MudTd>
                <MudTd>@poster.endDate</MudTd>
                <MudTd>@poster.Creator</MudTd>
                <MudTd>@poster.Institution</MudTd>
                <MudTd>@poster.image</MudTd>
            </RowTemplate>
            <CreateForm>
                <PosterCreateForm />
            </CreateForm>
            <EditForm>
                <PosterEditForm />
            </EditForm>
        </Manager>
    </MudTabPanel>
    <MudTabPanel Text="Poster Schedules">
    </MudTabPanel>
</MudTabs>
