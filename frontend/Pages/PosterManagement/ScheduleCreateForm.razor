@using MudBlazor
@using Shared.Manager
@inherits CreateForm<Schedule>

<MudForm @ref="_form">
    <MudCard>
        <MudCardContent>
            <ScheduleFormCommonComponents Schedule="_precreateItem" />
            <MudCardActions>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" @onclick="OnAddItem"
                    FullWidth="true">Add Schedule</MudButton>
            </MudCardActions>
            <MudCardActions>
                <MudButton FullWidth="true" @onclick="OnCancel" Variant="Variant.Filled"
                    Color="Color.Warning">Cancel</MudButton>
            </MudCardActions>

        </MudCardContent>
    </MudCard>
</MudForm>

@code {
    public int Label_CheckBox1 { get; set; } = 0;
